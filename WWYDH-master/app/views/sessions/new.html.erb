<% provide(:title, 'Login') %>
<% provide(:class, 'full') %>

<div class="row">

	<div class="account-wall col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3
							col-md-4 col-md-offset-4">

		<div class="form-signin">

			<%= image_tag("icongrey.png", class: "profile-img" )%>

			<h1 class="text-center">Login</h1>

			<br>

			<%= form_for(:user, url: sessions_path) do |f| %>
				<div class="form-group">
					<%= f.text_field :email, class: "form-control",
																	 placeholder: "Email" %>
				</div>

				<div class="form-group">
					<%= f.password_field :password, class: "form-control",
																					placeholder: "Password" %>
				</div>

				<%= f.submit "Submit", class: "btn btn-block btn-primary" %>
			<% end %>

			<hr>

			<p class="text-center">
				New user? <%= link_to "Sign up now!", register_path %>
			</p>

		</div>

	</div>

</div>
