<div class = "table-responsive" >
<table class="table table-hover">
  <h4 class="text-center">
    <%= page_entries_info @projects, model: 'project' %>
  </h4>
  <br>
  <thead>
    <tr>
      <th>ID</th>
      <th>Project Name</th>
      <th>Stage</th>
      <th>Project Leader</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <th scope="row"><%= project.id %></th>
        <td>
          <%= link_to project.title, project_path(id: project.id) %>
        </td>
        <td><%= project.stage %></td>
        <% if project.project_leader %>
          <td><%= project.project_leader.user.username %></td>
        <% else %>
          <td>No leader!</td>
        <% end %>
        <td><%= project.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="text-center">
  <%= js_will_paginate @projects, previous_label: "&larr; Prev",
  next_label: "Next &rarr;", style: "display: inline-block;",
  inner_window: 1, outer_window: 0 %>
</div>
