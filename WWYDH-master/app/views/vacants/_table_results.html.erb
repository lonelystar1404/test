<div class = "table-responsive" >
<table class="table table-hover">
  <h4 class="text-center">
    <%= page_entries_info @vacants, model: 'location' %>
  </h4>
  <br>
  <thead>
    <tr>
      <th>ID</th>
      <th>Address</th>
      <th>Block</th>
      <th>Lot</th>
      <th>Neighborhood</th>
      <th>Police District</th>
      <th>Council District</th>
    </tr>
  </thead>
  <tbody>
    <% @vacants.each do |vacant| %>
      <tr>
        <th scope="row"><%= vacant.id %></th>
        <td>
          <%= link_to vacant.full_address, vacant_path(id: vacant.id) %>
        </td>
        <td><%= vacant.block %></td>
        <td><%= vacant.lot %></td>
        <td><%= vacant.neighborhood %></td>
        <td><%= vacant.police_district %></td>
        <td><%= vacant.council_district %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="text-center">
  <%= js_will_paginate @vacants, previous_label: "&larr; Prev",
  next_label: "Next &rarr;", style: "display: inline-block;",
  inner_window: 1, outer_window: 0 %>
</div>
